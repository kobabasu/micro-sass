{
  "name": "sass-app",
  "version": "0.0.1",
  "description": "sass minimum app",
  "main": "sample/css/style.css",
  "repository": {
    "type": "git",
    "url": "//github.com/kobabasu/micro-coffee.git"
  },

  "keywords": [
    "sass",
    "bourbon",
    "neat",
    "bitters"
  ],
  "os": [
    "darwin",
    "linux",
    "!win32"
  ],

  "dependencies": {
  },
  "devDependencies": {
  },

  "scripts": {
    "preinstall": "cp ./{.bowerrc,bower.json} ../; mkdir ../{css,docs}; npm install -g bower styledocco; cd ../; bower install",
    "start": "NODE_ENV=production NODE_PATH=../",

    "sass": "sass --no-cache --sourcemap=file ../sass/style.sass:../css/style.css --style compressed",
    "doc:sass": "styledocco -n 'micro-sass' -o ../docs/sass --preprocessor 'sass' ../sass/*.sass ../sass/*.scss ../sass/**/*.sass",
    "doc:pages": "styledocco -n 'pages' -o ../docs/pages --preprocessor 'sass' ../sass/pages/*.sass ../sass/pages/**/*.sass",
    "doc:layouts": "styledocco -n 'layouts' -o ../docs/layouts --preprocessor 'sass' ../sass/layouts/*.sass ../sass/layouts/**/*.sass",

    "watch": "sass --no-cache --sourcemap=file -w ../sass/style.sass:../css/style.css",
    "build": "npm run sass; npm run doc:pages; npm run doc:layouts; npm run doc:sass"
  },

  "preferGlobal": true,
  "author": "kobabasu",
  "license": "MIT"
}
